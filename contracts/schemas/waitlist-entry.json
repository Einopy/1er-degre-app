{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://1er-degre.fr/schemas/waitlist-entry.json",
  "title": "WaitlistEntry",
  "description": "Waitlist entry for users interested in workshops matching specific criteria",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique waitlist entry identifier",
      "readOnly": true
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Email address for notification"
    },
    "user_id": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "Reference to user account if registered, null for anonymous waitlist"
    },
    "workshop_family": {
      "type": "string",
      "enum": ["FDFP", "HD"],
      "description": "Workshop family of interest: FDFP or HD"
    },
    "city": {
      "type": "string",
      "description": "Preferred city for workshop location"
    },
    "radius_km": {
      "type": "integer",
      "minimum": 0,
      "description": "Search radius in kilometers from preferred city",
      "default": 35
    },
    "status": {
      "type": "string",
      "enum": ["waiting", "notified", "converted", "expired"],
      "description": "Waitlist entry status"
    },
    "geographic_hint": {
      "type": ["string", "null"],
      "description": "Additional geographic preferences or constraints"
    },
    "notified_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Timestamp when user was notified of matching workshop"
    },
    "notified_workshop_id": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "Workshop ID that triggered notification"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier for multi-tenant isolation",
      "default": "1er-Degr√©"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Waitlist entry creation timestamp",
      "readOnly": true
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp",
      "readOnly": true
    }
  },
  "required": [
    "email",
    "workshop_family",
    "city",
    "status"
  ]
}
