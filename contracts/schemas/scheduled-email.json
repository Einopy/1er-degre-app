{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://1er-degre.fr/schemas/scheduled-email.json",
  "title": "ScheduledEmail",
  "description": "Email scheduled for future delivery with rendered HTML snapshot",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique scheduled email identifier",
      "readOnly": true
    },
    "template_id": {
      "type": "string",
      "format": "uuid",
      "description": "Reference to email template"
    },
    "recipient_email": {
      "type": "string",
      "format": "email",
      "description": "Recipient email address"
    },
    "recipient_user_id": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "Reference to recipient user if registered"
    },
    "subject": {
      "type": "string",
      "description": "Rendered email subject with merged variables"
    },
    "html_snapshot": {
      "type": "string",
      "readOnly": true,
      "description": "HTML content snapshot captured at schedule time for audit trail"
    },
    "merge_data": {
      "type": "object",
      "description": "Variable values for template merge",
      "additionalProperties": true
    },
    "scheduled_at": {
      "type": "string",
      "format": "date-time",
      "description": "When email should be sent"
    },
    "status": {
      "type": "string",
      "enum": ["scheduled", "sent", "failed"],
      "description": "Email sending status"
    },
    "sent_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Actual send timestamp",
      "readOnly": true
    },
    "error_message": {
      "type": ["string", "null"],
      "description": "Error details if sending failed"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier for multi-tenant isolation",
      "default": "1er-Degr√©"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Schedule creation timestamp",
      "readOnly": true
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp",
      "readOnly": true
    }
  },
  "required": [
    "template_id",
    "recipient_email",
    "subject",
    "scheduled_at",
    "status"
  ]
}
