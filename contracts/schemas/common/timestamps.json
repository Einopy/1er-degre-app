{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://1er-degre.fr/schemas/common/timestamps.json",
  "title": "Timestamp Fields",
  "description": "Standard timestamp patterns for entity tracking",
  "$defs": {
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of entity creation",
      "readOnly": true
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update",
      "readOnly": true
    }
  }
}
